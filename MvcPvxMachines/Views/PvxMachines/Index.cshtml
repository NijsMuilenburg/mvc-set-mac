@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>PVXID</th>
        <th>Name</th>
        <th>Geolocation</th>
        <th>MacAddress</th>

    </tr>
@for (int i = 0; i < Model.Rows.Count; i++)
{
    <tr>
        <td>@Model.Rows[i][0]</td>
        <td>@Model.Rows[i][1]</td>
        <td>@Model.Rows[i][2]</td>
        <td>@Model.Rows[i][3]</td>
        <td>
            <a href="@Url.Action("Edit","PvxMachines", new {@id=Model.Rows[i][0]})">Edit</a>
        </td>
    </tr>
}



</table>
<a href="@Url.Action("Create","PvxMachines")">Add PvxMachine</a>